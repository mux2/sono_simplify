<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:drawableLeft="@drawable/icon_comment"
            android:drawablePadding="5.0dip"
            android:gravity="center"
            android:paddingLeft="5.0dip"
            android:text="@string/detail_comment"
            android:textColor="@color/font_main_color"
            android:textSize="@dimen/size_22" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffe2e2e2" />

    <LinearLayout
        android:id="@+id/ll_comment_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.xinbo.widget.ListView4ScrollView
            android:id="@+id/lv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.xinbo.widget.ListView4ScrollView>

    </LinearLayout>

    
    	<!-- <include layout="@layout/item_all_comment_list_more"  android:layout_width="wrap_content" android:layout_height="wrap_content"/> -->
  

    <View
        android:layout_width="fill_parent"
        android:layout_height="15.0dip"
        android:background="@color/bg_common_gray" />

</LinearLayout>