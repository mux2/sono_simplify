<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/filmLL"
        android:layout_width="95.0dip"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_home_film_preview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/hotfilm" />

        <TextView
            android:id="@+id/tv_home_film_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="火星救援"
            android:textColor="@color/textColor_3c" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/scoreRB"
                style="@style/commentRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:numStars="5"
                android:rating="5.0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_home_film_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="0.0dip"
                android:singleLine="true"
                android:text="7.5分"
                android:textColor="@color/color_money" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="10.0dip"
        android:layout_height="fill_parent" />

</LinearLayout>