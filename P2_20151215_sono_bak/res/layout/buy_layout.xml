<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:maxHeight="65.0dip"
    android:minHeight="50.0dip" >

    <TextView
        android:id="@+id/lashou_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lashou_price"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:includeFontPadding="false"
            android:textColor="@color/goods_detail_price_color"
            android:text="￥35"
            android:textSize="29.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blank"
            android:textColor="@color/lightgray"
            android:textSize="24.0sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_org_price"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:gravity="bottom"
            android:text="￥70"
            android:textColor="@color/lightgray"
            android:textSize="16.0sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/buy_btn_click"
        android:minHeight="35.0dip"
        android:minWidth="60.0dip"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="立即购买"
        android:textColor="#FFFFFF"
        android:visibility="visible" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color" />

</RelativeLayout>