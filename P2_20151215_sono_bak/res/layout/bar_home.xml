<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
 	xmlns:android="http://schemas.android.com/apk/res/android"
    
    style="@style/title_bar_style"
    android:background="@color/font_select_shop_color" >

    <LinearLayout
        android:id="@+id/location_lay"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
         
        android:layout_centerVertical="true"
        android:background="@drawable/imageview_btn_selector"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip" >

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center|left"
            android:maxLines="2"
            android:paddingLeft="5.0dip"
            android:text="厦门"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2.0dip"
            android:src="@drawable/nav_icon_aroow_up_s" />
    </LinearLayout>
  
    
  <LinearLayout
        android:id="@+id/inputLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
       
               android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dip"
       android:layout_toLeftOf="@+id/ll_right"
        android:layout_toRightOf="@+id/location_lay"
        android:background="@drawable/edittext_round_background_yellow"
        android:orientation="horizontal"
        android:paddingBottom="5.0dip"
        android:paddingTop="5.0dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/home_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="搜索团购、商家、位置"
            android:textColor="#fff8c9b5"
            android:textSize="14.0sp" />
    </LinearLayout>
<LinearLayout 
       android:id="@+id/ll_right"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     android:layout_alignParentRight="true"
     android:gravity="center"
    >
    
 	   <ImageView
        android:id="@+id/scan_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
 		android:layout_weight="1"
        android:background="@drawable/imageview_btn_selector"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
         android:gravity="center"
        android:src="@drawable/nav_icon_scan_nor" />
        <ImageView
        android:id="@+id/message_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        	android:layout_weight="1"
       
        android:background="@drawable/imageview_btn_selector"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
         android:gravity="center"
        android:src="@drawable/nav_icon_message_nor" />

    
    
    
    
</LinearLayout>
    

 

   

</RelativeLayout>
