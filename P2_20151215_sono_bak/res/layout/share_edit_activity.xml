<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@id/rl_actionbar"
            style="@style/title_bar_style"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_back"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:paddingRight="5.0dip"
                android:textColor="@color/white"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="5.0dip"
                android:text="编辑分享内容"
                android:textColor="@color/B_black"
                android:textSize="17.0sp" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="20.0dip"
                android:layout_centerVertical="true"
                android:background="#46ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="20.0dip" >

            <EditText
                android:id="@+id/edt_text_content"
                android:layout_width="fill_parent"
                android:layout_height="170.0dip"
                android:gravity="top"
                android:hint="请输入微博内容，不能超过140个字符"
                android:maxEms="15"
                android:maxLength="140"
                android:padding="10.0dip"
                android:textSize="16.0dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还可以输入" />

                <TextView
                    android:id="@id/last_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:text="字" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_send"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20.0dip"
                android:background="@drawable/pay_btn_selector"
                android:padding="10.0dip"
                android:text="发 送"
                android:textColor="@color/C_white"
                android:textSize="18.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>