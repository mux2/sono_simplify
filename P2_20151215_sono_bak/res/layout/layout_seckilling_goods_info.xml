<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="20.0dip"
    android:paddingRight="30.0dip"
    android:paddingTop="10.0dip"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_any_refund"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="20.0dip"
            android:drawableLeft="@drawable/ic_support_tui"
            android:drawablePadding="5.0dip"
            android:textColor="#ff686767"
            android:textSize="@dimen/size_20" />

        <TextView
            android:id="@+id/tv_buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="2.0dip"
            android:drawableLeft="@drawable/count"
            android:drawablePadding="5.0dip"
            android:textColor="#ff686767"
            android:textSize="@dimen/size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_time_refund"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="20.0dip"
            android:drawableLeft="@drawable/ic_support_guoqi"
            android:drawablePadding="5.0dip"
            android:textColor="#ff686767"
            android:textSize="@dimen/size_20" />

        <TextView
            android:id="@+id/tv_time_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_deadline_info"
            android:drawablePadding="5.0dip"
            android:textColor="#ff686767"
            android:textSize="@dimen/size_20" />
    </LinearLayout>

</LinearLayout>