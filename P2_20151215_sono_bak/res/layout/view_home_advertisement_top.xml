<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topAdvertisementLL"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/include_horizontal" />

    <LinearLayout
        android:id="@+id/twoLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/oneIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/up_two_banner00" />

        <View
            android:layout_width="1.0px"
            android:layout_height="160.0dip"
            android:background="#ffd8d8d8" />

        <ImageView
            android:id="@+id/twoIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/up_two_banner01" />
    </LinearLayout>

    <include
        android:id="@+id/twoView"
        layout="@layout/divider_home_advertisement" />

    <LinearLayout
        android:id="@+id/threeLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/threeIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/up_three_banner00" />

        <View
            android:layout_width="1.0px"
            android:layout_height="160.0dip"
            android:background="#ffd8d8d8" />

        <ImageView
            android:id="@+id/fourIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/up_three_banner01" />

        <View
            android:layout_width="1.0px"
            android:layout_height="160.0dip"
            android:background="#ffd8d8d8" />

        <ImageView
            android:id="@+id/fiveIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/up_three_banner02" />
    </LinearLayout>

    <include
        android:id="@+id/threeView"
        layout="@layout/divider_home_advertisement" />

    <android.support.v4.view.ViewPager
        xmlns:adsLooper="http://schemas.android.com/apk/res-auto"
        android:id="@+id/advertisementLooper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />
    <!-- adsLooper:bannerDefaultPic="@drawable/home_adver_640" -->
    <!-- adsLooper:bannerHeightFactor="0.33" -->

    <include layout="@layout/include_horizontal" />

</LinearLayout>