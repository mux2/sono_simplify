<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <include
        android:id="@+id/refund_info"
        layout="@layout/layout_normal_goods_info"
        android:visibility="gone" />

    <include
        android:id="@+id/ll_seckilling_goods_info"
        layout="@layout/layout_seckilling_goods_info"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_product_luck"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center_vertical"
            android:textColor="#ff686767"
            android:textSize="18.0sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_lottery_goods_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_lottery_bought_count"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/count"
                android:drawablePadding="5.0dip"
                android:paddingLeft="20.0dip"
                android:textColor="#ff686767"
                android:textSize="@dimen/size_20" />

            <TextView
                android:id="@+id/tv_lottery_left_time"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_deadline"
                android:drawablePadding="5.0dip"
                android:gravity="left"
                android:text="1天13时25分"
                android:textColor="#ff686767"
                android:textSize="@dimen/size_20" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/goods_info_divider_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffe2e2e2" />

    <include
        android:id="@+id/layout_hotel_offers"
        layout="@layout/goods_hotel_offers"
        android:visibility="gone" />

</LinearLayout>