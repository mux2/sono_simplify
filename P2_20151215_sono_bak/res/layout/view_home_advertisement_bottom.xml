<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttomAdvertisementLL"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffe8e8e8" />

    <LinearLayout
        android:id="@+id/twoButtomLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/oneBottomIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/home_adver_320" />

        <View
            android:layout_width="1.0px"
            android:layout_height="160.0dip"
            android:background="#ffe8e8e8" />

        <ImageView
            android:id="@+id/twoBottomIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/home_adver_320" />
    </LinearLayout>

    <include
        android:id="@+id/twoBottomView"
        layout="@layout/divider_home_advertisement" />

    <LinearLayout
        android:id="@+id/threeButtomLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/threeBottomIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/home_adver_240" />

        <View
            android:layout_width="1.0px"
            android:layout_height="160.0dip"
            android:background="#ffe8e8e8" />

        <ImageView
            android:id="@+id/fourBottomIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/home_adver_240" />

        <View
            android:layout_width="1.0px"
            android:layout_height="160.0dip"
            android:background="#ffe8e8e8" />

        <ImageView
            android:id="@+id/fiveBottomIV"
            android:layout_width="0.0dip"
            android:layout_height="170.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/home_adver_240" />
    </LinearLayout>

    <include
        android:id="@+id/threeBottomView"
        layout="@layout/divider_home_advertisement" />

    <android.support.v4.view.ViewPager
        xmlns:adsLooper="http://schemas.android.com/apk/res-auto"
        android:id="@+id/advertisementBottomLooper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />
<!--         adsLooper:bannerDefaultPic="@drawable/home_adver_640" -->
<!--         adsLooper:bannerHeightFactor="0.33" -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ffe8e8e8" />

</LinearLayout>