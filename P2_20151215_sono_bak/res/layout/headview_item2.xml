<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rl_hv2_top_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="match_parent"
                android:background="#ffd8d8d8" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="#ffe8e8e8" />

        <LinearLayout
            android:id="@+id/rl_hv2_top_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="match_parent"
                android:background="#ffd8d8d8" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <include layout="@layout/include_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewM1"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />

            <View
                android:layout_width="1.0px"
                android:layout_height="160.0dip"
                android:background="#ffd8d8d8" />

            <ImageView
                android:id="@+id/imageViewM2"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />
        </LinearLayout>

        <include
            android:id="@+id/twoView"
            layout="@layout/divider_home_advertisement" />

        <LinearLayout
            android:id="@+id/rl_hv2_mid_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_hv2_mid_ll1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewM3"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />

            <View
                android:layout_width="1.0px"
                android:layout_height="160.0dip"
                android:background="#ffd8d8d8" />

            <ImageView
                android:id="@+id/imageViewM4"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />

            <View
                android:layout_width="1.0px"
                android:layout_height="160.0dip"
                android:background="#ffd8d8d8" />

            <ImageView
                android:id="@+id/imageViewM5"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:src="@drawable/default_list_pic" />
        </LinearLayout>

        <include
            android:id="@+id/threeView"
            layout="@layout/divider_home_advertisement" />
    </LinearLayout>

    <include
        android:id="@+id/rl_hv2_bot1_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        layout="@layout/home_film_ll" />

    <LinearLayout
        android:id="@+id/rl_hv2_bot2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <include
            android:id="@+id/divider_view"
            layout="@layout/divider_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:text="猜你喜欢"
            android:textColor="@color/textColor_16"
            android:textSize="18sp" />
    </LinearLayout>

    <include
        android:id="@+id/divider_view"
        layout="@layout/divider_horizontal" />

</LinearLayout>